<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Gestion des Notes</display-name>

    <!-- Titre de l'application -->
    <context-param>
        <param-name>title</param-name>
        <param-value>Gestion des notes</param-value>
    </context-param>

    <!-- URLs communes aux JSP -->
    <context-param>
        <param-name>header</param-name>
        <param-value>/WEB-INF/JSP/commun/header.jsp</param-value>
    </context-param>
    <context-param>
        <param-name>footer</param-name>
        <param-value>/WEB-INF/JSP/commun/footer.jsp</param-value>
    </context-param>

    <!--GESTION DES NOTES -->
    <servlet>
        <servlet-name>controller</servlet-name>
        <servlet-class>fr.iut2.massaa_notesabsences.controller.Controller</servlet-class>
        <init-param>
            <param-name>urlAccueil</param-name>
            <param-value>/WEB-INF/JSP/index.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>urlEtudiant</param-name>
            <param-value>/WEB-INF/JSP/etudiant.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>urlNotes</param-name>
            <param-value>/WEB-INF/JSP/listeNotes.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>urlAbsences</param-name>
            <param-value>/WEB-INF/JSP/listeAbsences.jsp</param-value>
        </init-param>
    </servlet>

    <!-- Servlet Mapping -->
    <servlet-mapping>
        <servlet-name>controller</servlet-name>
        <url-pattern>/do/*</url-pattern>
    </servlet-mapping>

    <!-- Fichier d'accueil -->
    <welcome-file-list>
        <welcome-file>do</welcome-file>
    </welcome-file-list>

</web-app>